<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h2 class="h2">Home / Products</h2>
  </div>
  <%= render partial: 'layouts/product/breadcrumbs' %>
    <div class="row">
      <% @products.each_with_index do |products, i| %>
        <div class="column">
          <div class="card" style="width: 25rem; height: 25rem;">
            <% if products.image.attached? %>
              <%= image_tag products.image.variant(resize: "300x300")%>
            <% end %>  

            <div class="card-body" style="background-color: #34216C; color: white;">
              <h5 class="card-title"><%= i + 1 %> . <%=products.title%></h5>
              <p class="card-text"><%=products.category%></p>
              <p class="card-text"><%=products.sale_item%></p>
            </div>
            <ul class="list-group list-group-flush" style="background-color: #35D4F4;">
              <li class="list-group-item" style="background-color: #34216C; color: white;"><%=products.cost%></li>
            </ul>
            <div class="card-body" style="background-color: #9FD7E5; height: 2rem;">
              <%= link_to product_path(products), :class => "card-link" do %><i class="fa fa-eye"></i><% end %>
              <%= link_to edit_product_path(products),:class => "card-link",  :remote => true do %><i class="fa fa-edit" ></i><% end %>
              <%= link_to product_path(products),  data: {confirm: "Are you sure you want to delete this?"}, method: :delete , :class => "card-link" do %><i class="fa fa-trash"></i><% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div><br><br>
</main>
